function pwa_menu() {
  $items = [];

  $items['pwa/%/serviceworker.js'] = [
    'page callback' => 'pwa_serviceworker_file_data',
    'page arguments' => [2],
    'access arguments' => ['access pwa'],
    'delivery callback' => 'pwa_deliver_js_file',
    'file' => 'pwa.pages.inc',
    'type' => MENU_CALLBACK,
